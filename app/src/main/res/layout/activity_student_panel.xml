                app:srcCompat="@drawable/function1" />

            <TextView
                android:id="@+id/stuPanelText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:text="Subject Enrolment"
                android:textColor="#EE4266"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enrolmentImg" />

            <TextView
                android:id="@+id/stuPanelText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="78dp"
                android:text="View Results"
                android:textColor="#EE4266"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resultsImg" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>