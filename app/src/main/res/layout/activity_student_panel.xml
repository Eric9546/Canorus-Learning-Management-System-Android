            <ImageView
                android:id="@+id/notesImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText5"
                app:srcCompat="@drawable/function12" />

            <ImageView
                android:id="@+id/assignmentImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="66dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText6"
                app:srcCompat="@drawable/function13" />

            <ImageView
                android:id="@+id/contactImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText3"
                app:srcCompat="@drawable/function5" />

            <ImageView
                android:id="@+id/detailsImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="66dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText4"
                app:srcCompat="@drawable/function6" />

            <TextView
                android:id="@+id/stuPanelText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="16dp"
                android:text="Contact Lecturer"
                android:textColor="#EE4266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactImg" />

            <TextView
                android:id="@+id/stuPanelText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
