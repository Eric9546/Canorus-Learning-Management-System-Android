                android:layout_marginTop="16dp"
                android:layout_marginEnd="72dp"
                android:text="Make Payment"
                android:textColor="#EE4266"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentImg" />

            <ImageView
                android:id="@+id/timetableImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText1"
                app:srcCompat="@drawable/function3" />

            <ImageView
                android:id="@+id/paymentImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="66dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stuPanelText2"
                app:srcCompat="@drawable/function4" />

            <TextView
                android:id="@+id/stuPanelText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_marginTop="16dp"
                android:text="View Timetable"
                android:textColor="#EE4266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timetableImg" />

            <ImageView
                android:id="@+id/resultsImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="66dp"
                android:background="#000000"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/function2" />

            <ImageView
                android:id="@+id/enrolmentImg"
                android:layout_width="109dp"
                android:layout_height="101dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
