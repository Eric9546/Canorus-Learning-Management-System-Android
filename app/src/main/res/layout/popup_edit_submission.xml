<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_border">

    <EditText
        android:id="@+id/popup_edit_submission_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ems="8"
        android:hint="Enter Grade"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popup_edit_submission_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="View"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/popup_edit_submission_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit_submission_comment" />

    <Button
        android:id="@+id/popup_edit_submission_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Delete"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/popup_edit_submission_view"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit_submission_comment_submit" />

    <Button
        android:id="@+id/popup_edit_submission_grade_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/popup_edit_submission_grade"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popup_edit_submission_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ems="8"
        android:hint="Enter Comment"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit_submission_grade" />

    <Button
        android:id="@+id/popup_edit_submission_comment_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/popup_edit_submission_comment"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit_submission_grade_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>